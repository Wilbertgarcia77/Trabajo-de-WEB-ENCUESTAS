@model encuestasgym.Models.Usuario
@{
    ViewData["Title"] = "Black Gym Ai";
}
<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        width: 100%;
    }
    .bg-login {
        min-height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg,#222 60%,#007bff 100%);
    }
    .login-card {
        width: 100%;
        max-width: 400px;
        background: #fff;
        padding: 40px 30px;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.15);
    }
</style>
<div class="bg-login">
    <div class="login-card">
        <h2 style="text-align:center;color:#007bff;font-weight:bold;margin-bottom:30px;letter-spacing:2px;">Black Gym Ai</h2>
        <form asp-action="Login" method="post">
            <div class="mb-3">
                <label class="form-label" style="font-weight:600;">Email</label>
                <input type="email" name="email" class="form-control" style="border-radius:8px;" required />
            </div>
            <div class="mb-3">
                <label class="form-label" style="font-weight:600;">Contraseña</label>
                <input type="password" name="password" class="form-control" style="border-radius:8px;" required />
            </div>
                <div class="d-grid gap-2 mb-2">
                    <button type="submit" class="btn btn-primary btn-block" style="border-radius:8px;font-weight:bold;">Iniciar sesión</button>
                </div>
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }
            </form>
            <hr />
            <div style="text-align:center;">
                ¿No tienes cuenta? <a href="/Account/Register" class="fw-bold" style="color:#007bff;">Regístrate aquí</a>
            </div>
          </div>
    </div>
</div>
